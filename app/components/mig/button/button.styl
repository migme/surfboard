$carrotOrange = #ec932b

button
  display inline-block
  width 60px
  height 60px
  overflow hidden
  cursor pointer
  font-size 0
  background-color transparent
  border-style none
  padding 0

  &:focus
    outline none
  &:active
    svg
      circle
        fill darken(white, 20%)
  svg
    transform rotate(-.125turn)
    width 100%
    height 100%
    path
      fill $carrotOrange
      transform-origin 50% 50%
      transition transform 200ms ease-in-out
    circle
      fill white
  &.close
    svg
      path
        transform rotate(-.125turn)
