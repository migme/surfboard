button
  display inline-block
  width 50px
  height 50px
  background-color #3cb9a0
  border 4px solid lightgrey
  border-radius 50%
  overflow hidden
  cursor pointer
  color transparent
  text-align center
  &:focus
    outline none
    border-color darkgrey
  &::before
    content '+'
    font-size 50px
    color white
    line-height 50px
    top 0
    position absolute
